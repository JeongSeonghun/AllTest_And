<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AllTest_And" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AllTest_And.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AllTest_And.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AllTest_And.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- tab test -->
    <style name="test_tab_style" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorColor">#498cff</item>
        <item name="tabTextAppearance">@style/test_tap_text_appearance</item>
        <item name="tabTextColor">#545c6d</item>
        <item name="tabSelectedTextColor">#498cff</item>
        <item name="tabMaxWidth">76dp</item>
    </style>
    <style name="test_tap_text_appearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#545c6d</item>
    </style>

    <!-- resource test -->
    <style name="CustomText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#003333</item>
    </style>
    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonTextColor">@color/sample_button_text</item>
    </style>
    <style name="CustomTheme2" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="buttonTextColor">@color/sample_button_text2</item>
    </style>

    <!-- transparent -->
    <style name="Transparent" parent="@style/Theme.AppCompat">
        <!--Titlebar 없애는 옵션
            true : Titlebar x
            false : Titlebar o
        -->
        <item name="windowNoTitle">false</item>
        <!-- 투명정도를 나타내는 색-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <!--
        android:backgroundDimEnabled
        true - 반투명 검정 /  false - 완전 투명
        -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- app bar -->
    <style name="ToolbarTitleStyleParent">
        <item name="android:fontFamily">casual</item>
        <item name="android:shadowDx">0.5</item>
        <item name="android:shadowDy">0.5</item>
        <item name="android:shadowRadius">0.5</item>
        <item name="android:shadowColor">#ffffff</item>
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/noActionColorPrimary</item>
        <item name="colorPrimaryDark">@color/noActionColorPrimaryDark</item>
        <item name="colorAccent">@color/noActionColorAccent</item>
    </style>

    <style name="ToolbarExpandTest" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">#a000a0</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ToolbarColapTest" parent="ToolbarTitleStyleParent">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Theme.CustomBehaviorAct" parent="Base.Theme.DesignDemo">
        <item name="windowNoTitle">true</item>
    </style>

</resources>