<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.RotateActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/btn_rotate_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_landscape"
                />

            <Button
                android:id="@+id/btn_rotate_prot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_portrait"
                />

            <Button
                android:id="@+id/btn_rotate_sensor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_sensor"
                />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_test"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="44dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
